<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="anlevkin.lesson04.calc.AboutActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/my_txt"
        android:textColor="@color/txt_color"
        android:gravity="right"
        android:textSize="@dimen/simple_text"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foto"
            android:layout_width="@dimen/image_size_width"
            android:layout_height="@dimen/image_size_height"
            android:src="@drawable/img_me"/>
        
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@id/foto"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/name"
            android:gravity="center"
            android:textSize="@dimen/header_level_01"
            android:textColor="@color/Красный"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/foto"
            android:layout_below="@id/name"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="@string/email"
            android:gravity="center"
            android:textSize="@dimen/header_level_02"
            android:textColor="@color/Желтый"/>
        
    </RelativeLayout>

    <TextView
        android:id="@+id/skillsHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/skillsHeader"
        android:textSize="@dimen/header_level_03"
        android:gravity="center"
        android:textColor="@color/Зеленый" />

    <TextView
        android:id="@+id/skillsField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/Синий"/>

</LinearLayout>
